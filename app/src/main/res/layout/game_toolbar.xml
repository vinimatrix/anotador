<?xml version="1.0" encoding="utf-8"?>

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".GameDetailsActivity">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="116dp"
            android:layout_marginTop="4dp"
            android:minHeight="?attr/actionBarSize"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/ining"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Top 1st"
                    android:textAppearance="@android:style/TextAppearance.Material.Title"
                    tools:layout_editor_absoluteX="138dp"
                    tools:layout_editor_absoluteY="12dp" />

                <TextView
                    android:id="@+id/women_s"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Visitor Name"
                    android:textAppearance="@android:style/TextAppearance.Material.Medium"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ining" />

                <TextView
                    android:id="@+id/visitor_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textAppearance="@android:style/TextAppearance.Material.Title"
                    app:layout_constraintHorizontal_bias="0.044"
                    app:layout_constraintLeft_toRightOf="@+id/women_s"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ining" />

                <TextView
                    android:id="@+id/home_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home Name"
                    android:textAppearance="@android:style/TextAppearance.Material.Medium"
                    app:layout_constraintHorizontal_bias="0.946"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    tools:layout_editor_absoluteY="39dp" />

                <TextView
                    android:id="@+id/home_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textAppearance="@android:style/TextAppearance.Material.Title"
                    tools:layout_editor_absoluteX="226dp"
                    tools:layout_editor_absoluteY="39dp" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="50dp"
                    android:layout_height="31dp"
                    app:srcCompat="@drawable/ic_artboard_1"
                    tools:layout_editor_absoluteX="145dp"
                    tools:layout_editor_absoluteY="39dp" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="B"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="85dp" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="145dp"
                    tools:layout_editor_absoluteY="85dp" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="O"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="260dp"
                    tools:layout_editor_absoluteY="85dp" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="65dp"
                    android:layout_height="27dp"
                    app:srcCompat="@drawable/ic_artboard_16"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="82dp" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="50dp"
                    android:layout_height="22dp"
                    app:srcCompat="@drawable/ic_artboard_16_copy_5"
                    tools:layout_editor_absoluteX="159dp"
                    tools:layout_editor_absoluteY="82dp" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="45dp"
                    android:layout_height="24dp"
                    app:srcCompat="@drawable/ic_artboard_16_copy_9"
                    tools:layout_editor_absoluteX="278dp"
                    tools:layout_editor_absoluteY="82dp" />
            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.Toolbar>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="ToolBar Tutorial"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" />

</android.support.constraint.ConstraintLayout>